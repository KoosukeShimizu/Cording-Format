//-========================
//- サイト共通設定
//-========================
include _includes/_config
//- block vars
//-========================
//- ページ設定
//-========================
- var root = './'//ルートパスの指定
- var key = 'confirm'//条件分岐に使用
- var index = 'false'//ページインデックスの有無
- var ogp = 'true'//OGPの有無
- var analytics = 'true'//GAタグの有無
//-========================
//- ページメタ情報
//- ここに入力した内容で上書きされます
//- 記入無しでサイト共通内容が反映されます
//-========================
- var pageTitle = 'お問い合わせ'//meta title内容
- var pageDescription = ''//meta description内容
- var pageKeywords = ''//meta keyword内容
- var pageOgUrl = ''//OG用 URL
- var pageOgTitle = 'お問い合わせ｜_サイト名_'//OG用 title
- var pageOgDescription = ''//OG用 description
- var pageOgImage = ''//OGImage
//-========================
//- パンくず/構造化データ生成
//-========================
- var pageSlug= "confirm"//ページのスラッグ※末尾に「/」必須
- var parentSlug= ""//ページが3階層目の場合、親ページのスラッグ※末尾に「/」必須
- var parentTitle= ""//ページが3階層目の場合、親ページの名前
//-========================
//- ライブラリ読み込み
//-========================
- var fontawesome = 'false'// fontawesome読み込み
- var slick = 'false'// slick読み込み ※block append js以下に発火用記述必須
- var swiper = 'false'// swiper読み込み ※block append js以下に発火用記述必須
- var magnificpopup = 'false'// magnificpopup読み込み ※block append js以下に発火用記述必須
- var accordion = 'false'
//-
//-
//-
//-========================
//- PAGE SOURCE
//-========================
doctype html
html(lang='ja')
  include _includes/_head
  //---------------------------------
  //- UNIQUE CSS
  //- ページ独自に使用するスタイル
  //---------------------------------
  block append css
    //- link(rel='stylesheet' type='text/css' href='../assets/css/###.css?ver=1.0.0')
    //- style(type='text/css').
      .class{}
  include _includes/_analytics
  body
    include _includes/_analytics_body
    .l-wrapper
      include _includes/_header
      include _includes/_module/_breadcrumb
      main.l-main
        //-========================
        //-========================
        //- PAGE CONTENTS START
        //- 編集はここから
        //-========================
        // PageContents
        article.c-page.p-confirm
          .c-page__head 
            .l-container
              h1.c-page__title 内容の確認
              .c-page__subtitle confirm
              .c-page__intro _下記の内容でお間違いない事をご確認の上『この内容で送信する』ボタンより、ご予約内容を送信してください。

          // section START
          section.l-section.p-confirm
            .l-container
              .c-step 
                ul.c-step__list 
                  li.c-step__item #[span.c-step__order step1] 情報のご入力
                  li.c-step__item.is-current #[span.c-step__order step2] 内容のご確認
                  li.c-step__item #[span.c-step__order step3] 送信完了
              //- h2.c-h2-deco ご入力内容
              form(method="post" action=root+"thanks"+extention enctype='multipart/form-data')
                .c-form
                  .c-form__item
                    .c-form__label お名前#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="name" name="name" value="山田 花子" readonly)

                  .c-form__item
                    .c-form__label ふりがな#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="name_kana" name="name_kana" value="やまだ はなこ" readonly)

                  .c-form__item
                    .c-form__label メールアドレス#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="email" name="email" value="example@mail.com" readonly)

                  .c-form__item
                    .c-form__label 電話番号#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="tel" name="tel" value="09012345678" readonly)
                  
                  .c-form__item
                    .c-form__label 性別#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="gender" name="gender" value="女性" readonly)
                  
                  .c-form__item
                    .c-form__label 生年月日#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="birthday" name="birthday" value="2000年1月1日" readonly)
                  .c-form__item
                    .c-form__label 郵便番号#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="postal-code" name="postal-code" value="1234567" readonly)
                     
                  .c-form__item
                    .c-form__label 都道府県#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="addres" name="addres" value="東京都渋谷区恵比寿◎-△-□" readonly)

                  .c-form__item
                    .c-form__label お問い合わせ種別#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="type" name="type" value="" readonly)
                  
                  .c-form__item
                    .c-form__label ご連絡可能時間#[span.c-form__require 必須]
                    .c-form__body
                      input.c-form__input(type="text" id="period" name="period" value="午前中, 夕方" readonly)

                  .c-form__item
                    .c-form__label お問い合わせ内容#[span.c-form__require 必須]
                    .c-form__body
                      textarea.c-form__textarea.js-autoresize(id ="comment" name='comment' readonly) 料金について教えて下さい

                  .c-form__submit
                    button.c-button-back(type="button" onclick="history.back()") 戻る
                    button.c-button-submit(type="submit" id="submit") 上記内容で送信する


          // section END
        // /pageContents

        //-========================
        //- PAGE CONTENTS END
        //- 編集はここまで
        //-========================
        //-========================
      //- include _includes/_sidebar
      include _includes/_footer
      //- include _includes/_module/_floatbox
    include _includes/_script
    //---------------------------------
    //- UNIQUE SCRIPT
    //- ページ独自に使用するJS
    //---------------------------------
    block append js
      script(src="https://yubinbango.github.io/yubinbango/yubinbango.js")
      //- script(type='text/javascript').
        $(function () {
          %scripts%
        });
    include _includes/_schema