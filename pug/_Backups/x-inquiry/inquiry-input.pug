      //- nav.stepNav
        ol.stepNav-inner
          li.stepNav-item.is-active #[span.stepNav-num 01] #[span.stepNav-label 入力]
          li.stepNav-item #[span.stepNav-num 02] #[span.stepNav-label 確認]
          li.stepNav-item #[span.stepNav-num 03] #[span.stepNav-label 完了]
        .stepNav-progress

      //- .inquiry
      //- h2.inquiry-ttl お問い合わせフォーム
      //- p.inquiry-txt (※)は必ずご記入ください。

      //- .form-wrap
      //- h3.form-h3 お客様情報
      form.form(id="form" action=root+"inquiry/finish.html" method="post")

        .form-item
          .form-ttl.is-required(for="name") 会社名・ご担当者様名#[br]※個人の方はお名前をご入力ください
          .form-body
            input(type="text" id="name" name="name" autocomplete="name" autofocus placeholder="例：株式会社 コロンディー　山田太郎" required)

        .form-item
          .form-ttl.is-required(for="email") メールアドレス
          .form-body
            input(type="email" id="email" name="email" autocomplete="email" placeholder="例：sample@domain.jp" required)

        .form-item
          .form-ttl.is-required(for="tel") 電話番号
          .form-body
            input(type="text" id="tel1" name="tel1" autocomplete="tel" palaceholder="例：00000000000" required)


        .form-item
          .form-ttl.is-required(for="comment") お問い合わせ内容
          .form-body
            textarea(id="comment" name="comment" placeholder="お悩みの症状などを具体的にお知らせください。" required)


        .form-item
          p.form-caution ※確認画面はありませんので入力内容をよくご確認ください。
          .btn-wrap #[button.btn-accent(type="submit" id="submit" form="form") 次へ]
