extend ../_includes/_layout.pug
block vars
  include ../_includes/_config
  - var noindex= "true";
  - var colmun= "single";
  - var root= "../";
  - var parentDir= "";
  //- - var status= "";
  - var key= "inquiry";
  - var pageUrl= "inquiry-confirm.html";
  - var pageTitle = "お問い合わせ"
  - var pageDescription = ""
  - var pageKeywords = ""
  //- - var page = pages[key];
  //- - var pageCategory= "";
  - var bodyClass= "";
//- /////////////////////
append css
  link(rel="stylesheet", href=root+cssPath+"form.css")
append js
  script(type="application/ld+json").
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "#{siteUrl}",
          "name": "#{siteName}"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "#{siteUrl}#{pageUrl}",
          "name": "#{pageTitle}"
        }
      }]
    }
//- /////////////////////
block breadcrumb
  nav.breadcrumb
    ol(itemscope itemtype="http://schema.org/BreadcrumbList")
      li.top(itemscope itemprop="itemListElement" itemtype="http://schema.org/ListItem")
        a(itemprop="item" href=root+""): span(itemprop="name") トップページ
        meta(itemprop="position" content="1")
      li(itemscope itemprop="itemListElement" itemtype="http://schema.org/ListItem")
        a(itemprop="item" href=root+pageUrl): span(itemprop="name") #{pageTitle}
        meta(itemprop="position" content="2")
//- /////////////////////
//- /////////////////////
//- /////////////////////
block main
  article.page
    .page-head
      h1.page-ttl #{pageTitle}#[br]#[span.page-subttl #{key}]
      p.page-intro 下記の内容でお間違いない事をご確認の上『この内容で送信する』ボタンより、お問い合わせ内容を送信してください。

    .page-body


      nav.stepNav
        ol.stepNav-inner
          li.stepNav-item.is-active #[span.stepNav-num 01] #[span.stepNav-label 入力]
          li.stepNav-item.is-active #[span.stepNav-num 02] #[span.stepNav-label 確認]
          li.stepNav-item #[span.stepNav-num 03] #[span.stepNav-label 完了]
        .stepNav-progress.step2


      .inquiry
        //- h2.inquiry-ttl お問い合わせ内容

        .form-wrap
          //- h3.form-h3 お客様情報
          form.form(id="form" action=root+"inquiry/finish.html" method="post")

            .form-item
              .form-ttl(for="name") お名前
              .form-body
                input(type="text" id="name" name="name" value="佐藤 花子" readonly)

            .form-item
              .form-ttl(for="furigana") ふりがな
              .form-body
                input(type="text" id="furigana" name="furigana" value="さとう はなこ" readonly)

            .form-item
              .form-ttl(for="email") メールアドレス
              .form-body
                input(type="email" id="email" name="email" value="example@domain.jp" readonly)

            .form-item
              .form-ttl(for="tel") 電話番号
              .form-body
                input(type="tel" id="tel" name="tel" value="000-0000-0000" readonly)

            .form-item
              .form-ttl(for="comment") お問い合わせ内容
              .form-body
                textarea(id="comment" name="comment" readonly) あああああああ


            .form-item
              .btn-wrap
                button.btn-accent(type="submit" id="submit" form="form") この内容で送信する
                button.btn-disable(type="button" onclick="history.back()") 戻る