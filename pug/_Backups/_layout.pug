doctype html
block vars
html(lang="ja")
  if ogpState === 'true'
    head(prefix="og: http://ogp.me/ns#")
      include _meta
  else
    head
      include _meta

  body(class=bodyClass)
    .l-wrap
      include _header
      .l-content
        block breadcrumb

        if colmun === 'single'
          block main
          //- main.l-main
            block main

        if colmun === 'double'
          main.l-main
            block main
          aside.l-side
            include _side

        if colmun === 'triple'
          main.l-main
            block main
          aside.l-side-left
            include _side-left
          aside.l-side-left
            include _side-right

      include _footer
      include _script