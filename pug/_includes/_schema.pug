//- home以外のときに設置
unless key==='home'
  // パンくずリストの構造化データ
  //- 親ページがある場合（第3階層目のページ）
  if parentSlug
    script(type='application/ld+json').
      {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "name": "ホーム"
          "item": "#{siteUrl}",
        }
      },{
        "@type": "ListItem",
        "position": 2,
        "item": {
          "name": "#{parentTitle}"
          "item": "#{siteUrl}#{parentSlug}",
        }
      },{
        "@type": "ListItem",
        "position": 3,
        "item": {
          "name": "#{pageTitle}"
          "item": "#{siteUrl}#{parentSlug}#{pageSlug}",
        }
      }]
      }
  //- 親ページがない場合（第2階層目のページ）
  else
    script(type='application/ld+json').
      {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "name": "ホーム"
          "item": "#{siteUrl}",
        }
      },{
        "@type": "ListItem",
        "position": 2,
        "item": {
          "name": "#{pageTitle}"
          "item": "#{siteUrl}#{pageSlug}",
        }
      }]
      }

