// 組織情報の構造化データ
//-  @type属性は組織によって変更
script(type='application/ld+json').
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "#{siteName}",
    "url": "#{siteUrl}",
    "logo": "#{siteLogo}",
    "email" : #{email},
    "telephone": #{telephone},
    "address": {
      "@type": "PostalAddress",
      "addressCountry" : "JP",
      "postalCode" : #{postalCode},
      "addressRegion" : #{addressRegion},
      "addressLocality": #{addressLocality},
      "streetAddress": #{streetAddress},
    },
    "sameAs": [
      "#{facebookUrl}",
      "#{twitterUrl}",
      "#{instagramUrl}",
      "#{lineUrl}",
      "#{youtubeUrl}",
    ]
  }


