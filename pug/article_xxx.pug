//-========================
//- サイト共通設定
//-========================
include _includes/_config
//- block vars
//-========================
//- ページ設定
//-========================
- var root = './'//ルートパスの指定
- var key = 'article'//条件分岐に使用
- var index = 'true'//ページインデックスの有無
- var ogp = 'true'//OGPの有無
- var analytics = 'true'//GAタグの有無
//-========================
//- ページメタ情報
//- ここに入力した内容で上書きされます
//- 記入無しでサイト共通内容が反映されます
//-========================
- var pageTitle = '記事タイトルが入ります'//meta title内容
- var pageDescription = '記事の要約が入ります'//meta description内容
- var pageKeywords = ''//meta keyword内容
- var pageOgUrl = siteUrl+pageSlug//OG用 URL
- var pageOgTitle = '記事タイトルが入ります｜_サイト名_'//OG用 title
- var pageOgDescription = '_サイト名_のブログ一覧ページです。'//OG用 description
- var pageOgImage = siteUrl+imgPath+'article/xxx.png'//OGImage
//-========================
//- パンくず/構造化データ生成
//-========================
- var pageSlug= "article_xxx"//ページのスラッグ※末尾に「/」必須
- var parentSlug= "article"//ページが3階層目の場合、親ページのスラッグ※末尾に「/」必須
- var parentTitle= "ブログ記事"//ページが3階層目の場合、親ページの名前
//-========================
//- ライブラリ読み込み
//-========================
- var fontawesome = 'false'// fontawesome読み込み
- var slick = 'false'// slick読み込み ※block append js以下に発火用記述必須
- var swiper = 'false'// swiper読み込み ※block append js以下に発火用記述必須
- var magnificpopup = 'false'// magnificpopup読み込み ※block append js以下に発火用記述必須
- var accordion = 'false'
